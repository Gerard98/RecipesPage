@model ProjektGG.ViewModels.Authentication.LoginVM

@{
    //ViewBag.Title = "Login";
    Layout = null;
}


<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/Content/bootstrap.css" rel="stylesheet">
    <link href="/Content/site.css" rel="stylesheet">
    <script src="/Scripts/modernizr-2.8.3.js"></script>
    <style>
        .div1 {
            height: 100px;
            min-width: 100px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" style="text-align:left" href="~/Home/Przepisy"> Przepisy </a>
            </div>
            <div class="navbar-collapse collapse">
                <u1 class="nav navbar-nav0"></u1>
            </div>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        <div class="container body-content">
            <h2>Logowanie</h2>
            <table class="table">
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.User.Username) : @Html.EditorFor(model => model.User.Username)
                        <span style="color:red">@Html.ValidationMessageFor(model => model.User.Username)</span>
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.User.Password) : @Html.PasswordFor(model => model.User.Password)
                        <span style="color:red">@Html.ValidationMessageFor(model => model.User.Password)</span>
                    </td>
                </tr>
                <p style="color: red">
                    @Html.ValidationMessage("CredentialError")
                </p>
                <tr>
                    <td><input type="submit" value="Zaloguj" class="btn btn-default" /></td>
                </tr>
                <tr>
                    <td><a href="~/Authentication/Register"> Zarejestruj się! </a></td>
                </tr>
            </table>
        </div>
    }
</body>
</html>



